# Database Configuration
# PostgreSQL connection string (e.g., from Supabase)
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# API Configuration (optional)
NEXT_PUBLIC_API_BASE_URL="/api"

# CORS Configuration (optional, comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# The Odds API Configuration
THE_ODDS_API_KEY="your-odds-api-key-here"

# Development Data Limiting (Optional - Only applies in NODE_ENV=development)
# Limits the number of games returned per league on multi-league pages (e.g., main games page)
# Set to 0 to disable limiting. Default: 3
DEV_GAMES_PER_LEAGUE="3"

# Limits the total number of games returned on single-league pages
# Set to 0 to disable limiting. Default: 10
DEV_SINGLE_LEAGUE_LIMIT="10"
