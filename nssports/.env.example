# ============================================
# NSSPORTS - Environment Configuration Template
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string (e.g., from Supabase)
DATABASE_URL="postgresql://user:password@host:5432/database"
DIRECT_URL="postgresql://user:password@host:5432/database"

# ============================================
# Authentication (NextAuth.js)
# ============================================
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# SportsGameOdds API (Primary Odds Provider)
# ============================================
SPORTSGAMEODDS_API_KEY="your-sportsgameodds-api-key-here"

# Streaming Configuration (AllStar Plan Required)
# Enable real-time WebSocket streaming for live games
SPORTSGAMEODDS_STREAMING_ENABLED="true"
NEXT_PUBLIC_STREAMING_ENABLED="true"

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_BASE_URL="/api"

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ============================================
# Development Data Limiting (Optional)
# ============================================
# Only applies in NODE_ENV=development
# Set to 0 to disable limiting
DEV_GAMES_PER_LEAGUE="5"
DEV_SINGLE_LEAGUE_LIMIT="10"

# ============================================
# Optional Configuration
# ============================================
# Application info (optional)
# NEXT_PUBLIC_APP_NAME="NorthStar Sports"
# NEXT_PUBLIC_APP_VERSION="1.0.0"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Logging level (optional, only affects production)
# LOG_LEVEL=info
