# ============================================
# NSSPORTS - Environment Configuration Template
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string (e.g., from Supabase)
DATABASE_URL="postgresql://user:password@host:5432/database"
DIRECT_URL="postgresql://user:password@host:5432/database"

# ============================================
# Authentication (NextAuth.js)
# ============================================
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# Redis Configuration (BullMQ Settlement Queue)
# ============================================
# Redis connection for automated bet settlement system
# Get free Redis from: https://redis.com/try-free/ or Upstash
REDIS_HOST="your-redis-host.com"
REDIS_PORT="6379"
REDIS_USERNAME="default"
REDIS_PASSWORD="your-redis-password"
REDIS_TLS="true"  # Set to "true" for Redis Cloud/Upstash

# ============================================
# SportsGameOdds API (Primary Odds Provider)
# ============================================
SPORTSGAMEODDS_API_KEY="your-sportsgameodds-api-key-here"
SPORTSGAMEODDS_WEBHOOK_SECRET="your-webhook-secret-here"

# Streaming Configuration (AllStar Plan Required)
# Enable real-time WebSocket streaming for live games
SPORTSGAMEODDS_STREAMING_ENABLED="true"
NEXT_PUBLIC_STREAMING_ENABLED="true"

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_BASE_URL="/api"

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ============================================
# Development Data Limiting (Optional)
# ============================================
# Intelligent sampling for development to reduce API usage by 80-90%
# 
# DEVELOPMENT ONLY - Automatically disabled in production
# 
# Impact:
# - Without: ~500-1000 games = 50+ API requests per page load
# - With: ~50 games = 5-10 API requests
# 
# Features:
# - Stratified sampling by league (balanced representation)
# - Intelligent sampling (prioritizes live > upcoming > finished)
# - Set to 0 to disable (not recommended - burns rate limits)
#
DEV_GAMES_PER_LEAGUE="10"
DEV_SINGLE_LEAGUE_LIMIT="25"

# ============================================
# Cache Configuration (Optional)
# ============================================
# TTL in seconds - Higher values reduce API calls
# Development: More aggressive caching
# Production: Balanced for real-time updates
# CACHE_TTL_EVENTS="120"
# CACHE_TTL_ODDS="120"
# CACHE_TTL_PLAYER_PROPS="120"
# CACHE_TTL_GAME_PROPS="120"

# ============================================
# Optional Configuration
# ============================================
# Application info (optional)
# NEXT_PUBLIC_APP_NAME="NorthStar Sports"
# NEXT_PUBLIC_APP_VERSION="1.0.0"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Logging level (optional, controls logging verbosity)
# - debug: All logs (development default)
# - info: Informational messages and above
# - warn: Warnings and errors only (production default)
# - error: Errors only
# LOG_LEVEL=warn

# Client-side logging level (for browser console)
# NEXT_PUBLIC_LOG_LEVEL=warn
